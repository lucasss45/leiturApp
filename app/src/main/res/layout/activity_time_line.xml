<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4E4A2"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="1500dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#DAA13D">

        <!-- Parte superior da timeline -->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!-- Fundo verde escuro com tÃ­tulo -->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_alignParentStart="true"
                android:background="#25483B"/>

            <!-- Caminho branco da timeline -->
            <View
                android:layout_width="1000dp"
                android:layout_height="16dp"
                android:background="#D8D8D8"
                android:layout_marginTop="200dp"
                android:layout_marginStart="10dp" />

            <!-- Linhas brancas verticais conectadas ao caminho -->
            <View
                android:layout_width="8dp"
                android:layout_height="120dp"
                android:background="#D8D8D8"
                android:layout_alignStart="@id/timeline"
                android:layout_marginTop="150dp"
                tools:ignore="NotSibling" />

            <View
                android:layout_width="8dp"
                android:layout_height="120dp"
                android:background="#D8D8D8"
                android:layout_marginStart="170dp"
                android:layout_marginTop="150dp" />

            <View
                android:layout_width="8dp"
                android:layout_height="120dp"
                android:background="#D8D8D8"
                android:layout_marginStart="600dp"
                android:layout_marginTop="150dp" />

            <!-- Seta -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_left"
            android:layout_marginStart="850dp"
            android:layout_marginTop="190dp"
            android:contentDescription="@string/arrow_description" />
        </RelativeLayout>
    </LinearLayout>
</HorizontalScrollView>