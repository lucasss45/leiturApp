<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4E4A2"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="1500dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:background="#DAA13D">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <!-- Primeira linha branca -->
            <View
                android:layout_width="1000dp"
                android:layout_height="16dp"
                android:background="#D8D8D8"
                android:layout_marginTop="350dp"
                android:layout_marginStart="30dp" />

            <!-- TextView para exibir o conteúdo dos botões -->
            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="370dp"
                android:textColor="#FFFFFF"
                android:textSize="23sp"
                android:visibility="gone" />

            <!-- Botão 1 -->

            <!-- Segunda linha branca -->
            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginTop="420dp"
                android:text="Infância de Pedro" />

            <View
                android:layout_width="8dp"
                android:layout_height="120dp"
                android:background="#D8D8D8"
                android:layout_marginStart="60dp"
                android:layout_marginTop="300dp" />

            <!-- Botão 2 -->
            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="220dp"
                android:layout_marginTop="260dp"
                android:text="Morte de Henrique" />

            <!-- Terceira linha branca -->
            <View
                android:layout_width="8dp"
                android:layout_height="120dp"
                android:background="#D8D8D8"
                android:layout_marginStart="300dp"
                android:layout_marginTop="300dp" />

            <!-- Botão 3 -->
            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="390dp"
                android:layout_marginTop="420dp"
                android:text="Reflexões de Pedro" />

            <!-- Quarta linha branca -->
            <View
                android:layout_width="8dp"
                android:layout_height="120dp"
                android:background="#D8D8D8"
                android:layout_marginStart="480dp"
                android:layout_marginTop="300dp" />

            <!-- Botão 4 -->
            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="560dp"
                android:layout_marginTop="250dp"
                android:text="Reconstrução da Memória" />

            <!-- Quinta linha branca -->
            <View
                android:layout_width="8dp"
                android:layout_height="120dp"
                android:background="#D8D8D8"
                android:layout_marginStart="680dp"
                android:layout_marginTop="300dp" />

            <!-- Botão 5 -->
            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="800dp"
                android:layout_marginTop="420dp"
                android:text="Relação com a Mãe" />

            <!-- Sexta linha branca -->
            <View
                android:layout_width="8dp"
                android:layout_height="120dp"
                android:background="#D8D8D8"
                android:layout_marginStart="880dp"
                android:layout_marginTop="300dp" />

            <!-- Botão 6 -->
            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="900dp"
                android:layout_marginTop="500dp"
                android:text="Confronto com Racismo" />

            <ImageView
                android:id="@+id/seta2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                android:contentDescription="@string/arrow_description"
                android:src="@drawable/ic_arrow_left" />

        </RelativeLayout>
    </LinearLayout>
</HorizontalScrollView>
